<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Core.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Core.Views.Desktop"
    FlyoutBehavior="Locked"
    FlyoutBackgroundColor="{AppThemeBinding Dark={StaticResource Gray2A2A2A}}">

    <Shell.MenuBarItems>
        <MenuBarItem Text="File">
            <MenuFlyoutSubItem Text="Open">
                <MenuFlyoutItem Text="Audio / Video"/>
                <MenuFlyoutItem Text="Folder"/>
            </MenuFlyoutSubItem>
        </MenuBarItem>
    </Shell.MenuBarItems>

    <FlyoutItem Title="Player">
        <ShellContent
            ContentTemplate="{DataTemplate local:PlayerPage}"
            Route="Player"/>
    </FlyoutItem
    <FlyoutItem Title="Library">
        <ShellContent
            ContentTemplate="{DataTemplate local:LibraryPage}"
            Route="Library"/>
    </FlyoutItem>
    
</Shell>
