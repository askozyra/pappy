<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Core.Resources.Styles.DesktopLayout">

    <Style TargetType="Grid" x:Key="WindowTitlebar">
        <Setter Property="HeightRequest" Value="24"/>
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark={StaticResource Gray333}}"/>
    </Style>
    
    <Style TargetType="Grid" x:Key="MenubarPlaceholder">
        <Setter Property="HeightRequest" Value="24"/>
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark={StaticResource Gray2A2A2A}}"/>
        <Setter Property="Grid.Row" Value="1"/>
    </Style>
    
    <Style TargetType="Image" x:Key="AppIcon">
        <Setter Property="Margin" Value="5, 2"/>
        <Setter Property="Source" Value="sora21x20px.png"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>
    
    <Style TargetType="Grid" x:Key="PageContentContainer">
        <Setter Property="Grid.Row" Value="2"/>
    </Style>
</ResourceDictionary>