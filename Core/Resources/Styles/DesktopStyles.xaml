<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="ContentPage" x:Key="Page">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark={StaticResource Gray222}}" />
    </Style>

    <Style TargetType="ProgressBar">
        <Setter Property="ProgressColor" Value="{AppThemeBinding Dark={StaticResource White}}" />
    </Style>

    <Style TargetType="CollectionView">
        <Setter Property="SelectionMode" Value="Single" />
        <Setter Property="CanReorderItems" Value="False" />
        <Setter Property="VerticalScrollBarVisibility" Value="Always" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="ItemsLayout">
            <Setter.Value>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="0" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Label" x:Key="CollectionViewItemLabelStyle">
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{AppThemeBinding Dark={StaticResource White}}" />
    </Style>

    <Style TargetType="Label" x:Key="CollectionViewHeaderLabelStyle">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{AppThemeBinding Dark={StaticResource White}}" />
        <Setter Property="HorizontalOptions" Value="Start" />
    </Style>

    <Style TargetType="Grid" x:Key="CollectionViewHeaderGridStyle">
        <Setter Property="Padding" Value="0, 10" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark={StaticResource Gray333}}" />
    </Style>

    <Style TargetType="Border" x:Key="CollectionViewItemGridStyle">
        <Setter Property="Padding" Value="0, 10" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="VerticalOptions" Value="Fill" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <Setter.Value>
                <VisualStateGroupList>
                    <VisualStateGroup Name="CommonStates">
                        <VisualState Name="Normal">
                            <VisualState.Setters>
                                <Setter TargetName="PlayHoverButton"
                                    Property="IsVisible"
                                    Value="False" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState Name="PointerOver">
                            <VisualState.Setters>
                                <Setter TargetName="PlayHoverButton"
                                    Property="IsVisible"
                                    Value="True" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Slider">
        <Setter Property="MinimumTrackColor" Value="{AppThemeBinding Dark={StaticResource White}}" />
        <Setter Property="MaximumTrackColor" Value="{AppThemeBinding Dark={StaticResource Gray666}}" />
        <Setter Property="ThumbColor" Value="{AppThemeBinding Dark={StaticResource White}}" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="MinimumTrackColor" Value="{AppThemeBinding Dark={StaticResource Gray666}}" />
                            <Setter Property="MaximumTrackColor" Value="{AppThemeBinding Dark={StaticResource Gray666}}" />
                            <Setter Property="ThumbColor" Value="{AppThemeBinding Dark={StaticResource Gray666}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="MinimumHeightRequest" Value="15" />
        <Setter Property="MinimumWidthRequest" Value="15" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark={StaticResource Gray222}}" />
        <Setter Property="Color" Value="{AppThemeBinding Dark={StaticResource White}}" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark={StaticResource Gray666}}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark={StaticResource Black}}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Color" Value="{AppThemeBinding Dark={StaticResource GrayAAA}}" />
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark={StaticResource Gray444}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Dark={StaticResource White}}" />
        <Setter Property="FontFamily" Value="{StaticResource CurrentFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource CurrentFontSize}" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <Style TargetType="RadioButton">
        <Setter Property="TextColor" Value="{AppThemeBinding Dark={StaticResource White}}" />
        <Setter Property="FontFamily" Value="{StaticResource CurrentFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource CurrentFontSize}" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="TextColor" Value="{AppThemeBinding Dark={StaticResource White}}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark={StaticResource Gray222}}" />
        <Setter Property="FontFamily" Value="{StaticResource CurrentFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource CurrentFontSize}" />
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="MinimumHeightRequest" Value="20" />
        <Setter Property="MinimumWidthRequest" Value="20" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{AppThemeBinding Dark={StaticResource GrayAAA}}" />
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark={StaticResource Gray444}}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark={StaticResource Gray666}}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark={StaticResource Black}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{AppThemeBinding Dark={StaticResource White}}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark={StaticResource Gray333}}" />
        <Setter Property="FontFamily" Value="{StaticResource CurrentFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource CurrentFontSize}" />
        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Dark={StaticResource Gray666}}" />
        <Setter Property="MinimumHeightRequest" Value="15" />
        <Setter Property="MinimumWidthRequest" Value="15" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{AppThemeBinding Dark={StaticResource GrayAAA}}" />
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark={StaticResource Gray444}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

</ResourceDictionary>
